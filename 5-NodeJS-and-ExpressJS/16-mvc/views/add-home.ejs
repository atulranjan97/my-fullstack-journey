<%- include('partials/meta-tags') %>
</head>
<body class="min-h-screen bg-gradient-to-b from-gray-50 to-gray-100">
    <%- include('partials/nav') %>
    <main class="">
        <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-8 mt-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Add your Home</h1>
            <form action="/host/add-home" method="post" class="space-y-6">
                <div class="flex flex-col gap-y-2 ">
                    <input type="text"
                        name="houseName"
                        placeholder="Name of your house"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    />
                    <input type="number"
                        name="price"
                        placeholder="Daily rent of your house"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    />
                    <input type="text"
                        name="location"
                        placeholder="Enter house location"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    />
                    <input type="text"
                        name="rating"
                        placeholder="Rating of the house"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    />
                    <input type="text"
                        name="photoUrl"
                        placeholder="Upload a photo"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    />
                </div>
                <div class="flex justify-center">
                    <input type="submit" 
                        value="Add Home"
                        class="px-6 py-3 bg-red-500 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors duration-200 cursor-pointer"
                    >
                </div>
            </form>
        </div>
    </main>
</body>
</html>

